@model MVCTutorial.ViewModels.OrdersForCustomer

@{
    ViewBag.Title = "Orders For Customer";
}

<h2>Orders For @Model.Customer.Name</h2>

<table class="table">
    <tr>
        <th>
            
        </th>
        <th>
            Total
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Orders) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
        </tr>
    }

</table>

